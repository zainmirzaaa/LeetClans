{
    "manifest_version": 2,
    "name": "LeetClans",
    "version": "1.0",
    "description": "A social media app for LeetCode enthusiasts to connect, share solutions, and form coding clans.",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "browser_action": {
      "default_icon": {
        "16": "images/clan.png",
        "48": "images/clan.png",
        "128": "images/clan.png"
      },
      "default_title": "leetclans",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "images/clan.png",
      "48": "images/clan.png",
      "128": "images/clan.png"
    },
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/problems/*"],
        "css": ["content.css"],
        "js": ["content.js"]
      },
      {
        "matches": ["https://leetcode.com/*"],
        "exclude_matches": ["https://leetcode.com/problems/*"],
        "css": ["panel.css"],
        "js": ["panel.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      "panel.html"
    ]
  }
  